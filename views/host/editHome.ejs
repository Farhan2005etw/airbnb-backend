<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-100">
        <%- include('../partials/nav') %>
            <header class="bg-white shadow-md py-4">
                <h1 class="text-red-700 text-4xl font-bold text-center">
                    <%=editing ? "Edit" : "Add" %> Your Home Details
                </h1>
            </header>
            <main class="container mx-auto px-4 py-8">
                <form action="/host/<%=editing ? "edit-home" : "add-home"%>" method="POST" enctype="multipart/form-data" class="max-w-md mx-auto">
                    <input type="hidden" name="id" value="<%= editing ? home._id : ''%>" />
                    <input type="text" name="houseName" value="<%= editing ? home.houseName : ''%>"
                        placeholder="House Name"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="text" name="price" value="<%= editing ? home.price : ''%>"
                        placeholder="Enter your price"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="text" name="location" value="<%= editing ? home.location : ''%>" placeholder="Enter Your Location"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="text" name="rating" value="<%= editing ? home.rating : ''%>" placeholder="Rating"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="file" name="photo" accept="image/*"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                     <textarea name="description" 
                        placeholder="Describe Your Home"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" ><%= editing ? home.description : '' %></textarea>
                    <input type="submit" value="<%=editing ? " Update" : "Add Home" %>" class="w-full bg-red-600
                    text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out
                    cursor-pointer"/>
                </form>
            </main>
    </body>

    </html>