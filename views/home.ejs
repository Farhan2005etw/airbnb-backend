<%- include('partials/head') %>
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow-md py-4">
        <h1 class="text-red-700 text-4xl font-bold text-center">These are our Registered Homes! </h1>  
        
    </header>
    <main class="container mx-auto px-4 py-8">
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
            <% registeredHomes.forEach(Home => { %>
                <li class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-200 flex flex-col">
                    <h3 class="text-2xl font-semibold text-gray-800 mb-4"><%=Home.houseName %></h3>
                </li>
            <% }) %>
        </ul> 
        <a href="/host/add-home" class="inline-block bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out mt-8">Add Home</a>
    </main>
</body>
</html>