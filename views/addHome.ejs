<%- include('partials/head') %>
</head>
<body class="bg-gray-100">
    <header class="bg-white shadow-md py-4">
        <h1 class="text-red-700 text-4xl font-bold text-center">Enter Your Home Details</h1>
    </header>
    <main class="container mx-auto px-4 py-8">
        <form action="/host/add-home" method="POST" class="max-w-md mx-auto">
            <input type="text" name="houseName" placeholder="House Name" class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500"/>
            <input type="text" name="price" placeholder="Enter your price" class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500"/>
            <input type="text" name="location" placeholder="Enter Your Location" class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500"/>
            <input type="text" name="rating" placeholder="Rating" class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500"/>
            <input type="text" name="photo" placeholder="Photo Url" class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500"/>
            <input type="submit" class="w-full bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out cursor-pointer"/>
        </form>
    </main>
</body>
</html>