<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-100">
        <%- include('../partials/nav') %>
            <header class="bg-white shadow-md py-4">
                <h1 class="text-red-700 text-4xl font-bold text-center">
                    Register as a New User
                </h1>
            </header>
            <main class="container mx-auto px-4 py-8">
                <%- include('../partials/errors') %>
                <form action="/signup" method="POST" class="max-w-md mx-auto">
                    <input type="text" required name="firstName" 
                        value="<%=oldInput.firstName ? oldInput.firstName : ''%>"
                        placeholder="Enter Your First Name"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="text" name="lastName" 
                        value="<%= oldInput.lastName ? oldInput.lastName : ''%>"
                        placeholder="Enter Your Last Name"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="email" required name="email"
                        value="<%= oldInput.email ? oldInput.email : ''%>" 
                        placeholder="Enter your Email"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="password" required name="password"
                        placeholder="Enter Your Password"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="password" required name="confirmPassword"
                        placeholder="Confirm Your Password"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <select name="userType" id="userType" required class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" >
                        <option value="">Select Your Type</option>
                        <option value="guest">Guest</option>
                        <option value="host">Host</option>
                    </select>
                    <input type="checkbox" required name="terms" id="terms" 
                                                               
                        class="mr-2" />
                    <label  for="terms">I agree to the terms and conditions.</label>
                    
                    
                    <input type="submit" value="Register" class="w-full bg-red-600
                    text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out
                    cursor-pointer"/>
                </form>
            </main>
    </body>

    </html>