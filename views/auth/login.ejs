<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-100">
        <%- include('../partials/nav') %>
            <header class="bg-white shadow-md py-4">
                <h1 class="text-red-700 text-4xl font-bold text-center">
                    Login
                </h1>
            </header>
            <main class="container mx-auto px-4 py-8">
                <%- include('../partials/errors') %>
                <form action="/login" method="POST" class="max-w-md mx-auto">
                    <input type="email" required name="email" 
                        placeholder="Enter you E-mail"
                        value="<%= oldInput.email ? oldInput.email : ''%>" 
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    <input type="password" required name="password"
                        placeholder="Enter Your Password"
                        class="w-full px-4 py-2 mb-4 border rounded-lg focus:outline-none focus:border-red-500" />
                    
                    <input type="submit" value="Login" class="w-full bg-red-600
                    text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out
                    cursor-pointer"/>
                </form>
            </main>
    </body>

    </html>