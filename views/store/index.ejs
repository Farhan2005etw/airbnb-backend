<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">  
  <%- include('../partials/nav') %>
    <header class="bg-white shadow-md py-4">
        <h1 class="text-red-700 text-4xl font-bold text-center">Welcome to our Index Pages </h1>  
        
    </header>
    <main class="container mx-auto px-4 py-8">
        <div class="flex flex-wrap justify-center gap-6">
            <% registeredHomes.forEach(home => { %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
                <img src="https://imgs.search.brave.com/_mKrliEyk-hFhTvzNq3DUE3FEMpNjVZbmpjQVO9g0Dg/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5pc3RvY2twaG90/by5jb20vaWQvMTc0/OTUyOTQ5L3Bob3Rv/L3JlYWwtZXN0YXRl/LWlzb2xhdGVkLWhv/bWUtd2l0aC1nYXJk/ZW4uanBnP3M9NjEy/eDYxMiZ3PTAmaz0y/MCZjPVpOMXYzWmps/VVdyRXYyUWE1MzF1/bFhGNWhmVFRFWFdO/dUxNYzgyLXFQQ2M9" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
                <div class="p-4">
                  <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
                  <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
                  <div class="flex justify-between items-center mb-4">
                    <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                    <div class="flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700"><%= home.rating %></span>
                    </div>
                  </div>
                  <div class="text-center">
                    <button class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Book</button>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <div class="text-center mt-8">
          <a href="/host/add-home" class="inline-block bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition duration-200 ease-in-out">Add Home</a>
        </div>
    </main>
</body>
</html>