<%- include('../partials/head') %>
<!-- Make sure Tailwind CSS is included in your head partial -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/nav') %>
    
    <!-- Page Header -->
    <header class="bg-red-600 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <h1 class="text-white text-3xl font-bold text-center">
                Property Details
            </h1>
            <p class="text-red-100 text-center mt-2">
                Discover your perfect stay
            </p>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Property Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Property Image -->
            <div class="relative">
                <img 
                    src="<%= home.photo %>" 
                    alt="<%= home.houseName %>" 
                    class="w-full h-64 md:h-80 object-cover"
                >
                <div class="absolute top-4 right-4">
                    <%- include('../partials/favourite') %>
                </div>
            </div>

            <!-- Property Details -->
            <div class="p-6 md:p-8">
                <!-- Title and Location -->
                <div class="mb-6">
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-3">
                        <%= home.houseName %>
                    </h2>
                    <p class="text-gray-600 mb-4 flex items-center text-lg">
                        <i class="fas fa-map-marker-alt mr-3 text-red-500"></i>
                        <%= home.location %>
                    </p>
                </div>

                <!-- Rating and Price Row -->
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-yellow-400 mr-2">
                            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-700 font-medium text-lg">
                            <%= home.rating %>
                        </span>
                    </div>
                    <div class="text-right">
                        <span class="text-2xl md:text-3xl font-bold text-red-600">
                            â‚¹<%= home.price %>
                        </span>
                        <span class="text-gray-500 text-lg">/ night</span>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">
                        About this place
                    </h3>
                    <p class="text-gray-600 leading-relaxed text-base">
                        <%= home.description %>
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t">
                    <button class="flex-1"></button>
                        <a href="/bookings/<%= home._id %>" class=" bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 transform hover:scale-105 shadow-md">
                        <i class="fas fa-calendar-check mr-2"></i>Book Now</a>
                    </button>
                    
                </div>
            </div>
        </div>
    </main>
</body>
</html>